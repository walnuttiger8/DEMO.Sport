<Window x:Class="Sport.Windows.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sport.Windows"
        mc:Ignorable="d"
        Title="Управление приложением" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Margin="60 0">
            <Button Name="showProducts" Content="Просмотр товаров" Margin="0 20" Height="40" Click="showProducts_Click"/>
            <Button Name="showOrders" Content="Просмотр заказов" Margin="0 20" Height="40"/>
        </StackPanel>
    </Grid>
</Window>
